<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane stylesheets="@../styles/main.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.labproject.controllers.AuthController">
   <Label id="title" styleClass="title" text="%login" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0"/>
   <GridPane layoutY="55.0" AnchorPane.leftAnchor="0.0">
      <GridPane>
         <Label id="usernameLabel" text="%username"/>
         <TextField fx:id="usernameField" GridPane.columnIndex="1"/>
         <Label id="passwordLabel" text="%password" GridPane.rowIndex="1"/>
         <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
      </GridPane>
      <GridPane alignment="TOP_RIGHT" GridPane.rowIndex="1">
         <Button id="loginButton" mnemonicParsing="false" onAction="#login" text="%login" GridPane.columnIndex="1"/>
         <Button id="registerButton" mnemonicParsing="false" onAction="#register" text="%register"/>
      </GridPane>
   </GridPane>
</AnchorPane>
